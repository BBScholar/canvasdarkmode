{
  "manifest_version": 2,

  "name": "Dark Mode for Canvas",

  "version": "1.1.3",

  "description": "Dark mode support for Canvas. Stay up late doing your homework, without the eyestrain.",

  "icons":
  {
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "options_ui" :
  {

    "page" :"options.html",
    "open_in_tab" : false
  },

  "browser_action" :
  {
    "default_title" : "Dark Mode for Canvas",
    "default_popup" : "popup.html"
  },

  "content_scripts":
  [
    {

      "css": ["canvas.css"],
      "run_at": "document_start",
      "matches": ["https://*.instructure.com/*"]
    },
    {

      "css": ["webwork.css"],
      "run_at": "document_start",
      "matches": ["https://webwork.uncc.edu/*"]
    },
    {
      "css": ["webauth.css"],
      "run_at": "document_start",
      "matches": ["https://webauth.uncc.edu/*"]
    }]

}
