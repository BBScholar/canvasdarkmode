{
  "manifest_version": 2,

  "name": "Dark Mode for Canvas (Beta)",
  "version": "1.0.0",
  "description": "Dark mode support for Canvas. Stay up late doing your homework, without the eyestrain.",
  "icons": {
            "48": "icon48.png",
            "128": "icon128.png" },
  "options_ui" : {

    "page" :"options.html",
    "open_in_tab" : false
  },

  "browser_action" : {

                  "default_title" : "Settings",
                  "default_popup" : "popup.html"

            },
  "content_scripts": [{
    "css": ["canvas.css"],
    "matches": ["https://*.instructure.com/*"]
  },
  {
    "css": ["webauth.css"],
    "matches": ["https://webauth.uncc.edu/*"]
  }]

}
